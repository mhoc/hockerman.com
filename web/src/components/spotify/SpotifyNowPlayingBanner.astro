---
import { Icon } from 'astro-icon/components';

import GlassCard from "../GlassCard.astro";
import SpotifyNowPlayingBannerContent from './SpotifyNowPlayingBannerContent';
---
<GlassCard background="gradient-animation">
  <div class="container">
    <div class="spotify-icon-container">
      <Icon class="icon" name="fa6-brands:spotify" />
    </div>
    <div class="now-playing-container">
      <SpotifyNowPlayingBannerContent client:load />
    </div>
  </div>
</GlassCard>
<style>
  .container {
    align-items: center;
    display: flex;
    flex-direction: row;
    width: 400px;
  }
  .spotify-icon-container {
    margin-right: 24px;
  }
  @media only screen and (max-width: 600px) {
    .spotifyIconContainer {
      display: none;
    }
  }
  .icon {
    color: #28323E;
    height: 32px;
    width: 32px;
  }
  .now-playing-container {
    display: flex;
    flex-direction: column;
  }
</style>
