---
interface Props {
  borderColor: string;
  bullets: Array<string>;
  company: string;
  companyHref: string;
  location: string;
  positions: Array<{
    title: string;
    years: string;
  }>;
}
const { borderColor, bullets, company, companyHref, location, positions } = Astro.props;
---
<div class="xcontainer p-2" style={{
  "border-color": borderColor,
}}>
  <div class="grid grid-cols-1 lg:grid-cols-2">
    <div class="flex flex-col">
      <div class="flex flex-row items-baseline">
        <a href={companyHref} target="_blank">
          <span class="text-lg lg:text-xl text-zinc-100 mr-3 leading-5">
            {company}
          </span>
        </a>
        <span class="text-sm lg:text-md text-zinc-500 leading-5">{location}</span>
      </div>
      {positions.map(position => (
        <div class="flex flex-row items-baseline">
          <span class="text-sm lg:text-md text-zinc-400 mr-3 leading-5">{position.title}</span>
          {position.years && <span class="text-xs lg:text-sm text-zinc-500 leading-5">({position.years})</span>}
        </div>
      ))}
    </div>
    <div class="flex flex-col max-w-xl">
      {bullets.map(bullet => (
        <div class="flex flex-row">
          <span class="text-sm text-zinc-400 mr-2">â€¢</span>
          <span class="text-sm text-zinc-400">{bullet}</span>
        </div>
      ))}
    </div>
  </div>
</div>
<style>
  .xcontainer {
    border-left-style: solid;
    border-left-width: 2px;
  }
</style>