---
import { getSpotifyCurrentlyPlayingSong } from "../../server/spotify/getSpotifyCurrentlyPlayingSong";

const { item } = await getSpotifyCurrentlyPlayingSong();
let text: string;
if (item === "none") {
  text = "Nothing Playing";
} else {
  text = `${item.name} - ${item.artists[0].name}`;
}
---
<>{text}</>
